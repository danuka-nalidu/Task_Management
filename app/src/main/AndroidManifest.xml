<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaluambasta.noteapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="To Do List"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp">

        <activity
            android:name=".UpdateNoteActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MainActivity"
            android:label="Task Master"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> <!-- Specifies that the activity is the main entry point -->
                <category android:name="android.intent.category.LAUNCHER" /> <!-- Indicates that the activity should appear in the launcher -->
            </intent-filter>
        </activity>

    </application>

</manifest>